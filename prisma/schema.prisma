// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Interest {
  id        String   @id @default(uuid())
  name      String   @unique
  active    Boolean
  createdAt DateTime @default(now()) @db.Timestamptz(3)
  updatedAt DateTime @updatedAt @db.Timestamptz(3)

  @@map("interests")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  interests String[]
  posts     Post[]
  createdAt DateTime @default(now()) @db.Timestamptz(3)
  updatedAt DateTime @updatedAt @db.Timestamptz(3)

  @@map("users")
}

model Post {
  id        String   @id @default(uuid())
  text      String
  authorId  String
  createdAt DateTime @default(now()) @db.Timestamptz(3)
  updatedAt DateTime @updatedAt @db.Timestamptz(3)
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@map("posts")
}

model Campaign {
  id        String   @id @default(uuid())
  name      String
  text      String
  interests String[]
  startTime DateTime
  endTime   DateTime
  status    Boolean
  createdAt DateTime @default(now()) @db.Timestamptz(3)
  updatedAt DateTime @updatedAt @db.Timestamptz(3)

  @@map("campaigns")
}
